@using Projeto.Models
@model UserUpdatePassword

<div class="card">
    <h6 class="card-header">
        Alteração da Senha
    </h6>
    <div class="card-body">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-action="AlterarSenha" method="POST">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Username" />


            <div class="form-row">
                <div class="form-group col-md-2">
                    Senha
                    <input type="password" asp-for="Password" class="form-control form-control-sm" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    Nova Senha
                    <input type="password" asp-for="NewPassword" class="form-control form-control-sm" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    Confirme a Nova Senha
                    <input type="password" asp-for="ConfirmNewPassword" class="form-control form-control-sm" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-1">
                    <input type="submit" value="Concluir" class="btn btn-info">
                </div>
                <div class="form-group col-md-1">
                    <a asp-controller="Interno" asp-action="Index" class="btn btn-light">
                        Fechar
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>
