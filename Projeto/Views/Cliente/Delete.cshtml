@model Projeto.Models.Cliente

<div class="card">
  <div class="card-body">

    <h5 class="card-title">Tem certeza que deseja Excluir?</h5>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
      <h6>@ViewBag.Message</h6>
    </div>

    <form asp-action="Delete" method="POST">

      <div class="row">
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted">Código</h6>
              <h6> @Model.Idcliente</h6>
              <input type="hidden" asp-for="Idcliente" />
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted">Nome</h6>
              <h6>@Model.Nome</h6>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted">CNPJ</h6>
              <h6>@Model.CpfCnpj</h6>
            </div>
          </div>
        </div>
      </div>

      <br>
      <div class="form-row">
        <div class="form-group col-md-1">
          <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
        <div class="form-group col-md-1">
          <a asp-action="Index" class="btn btn-light">
            Fechar
          </a>
        </div>
      </div>

    </form>

  </div>
</div>
