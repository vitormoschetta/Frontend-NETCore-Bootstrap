@model Projeto.Models.Cliente

<div class="card">
    <h6 class="card-header">
        Cadastrar Cliente
    </h6>
    <div class="card-body">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-action="Create">

            <input type="hidden" asp-for="Ativo" value="true" class="form-control" />

            <div class="form-row">
                <div class="form-group col-md-6">
                    Nome
                    <input type="text" asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    CPF / CNPJ
                    <input type="text" asp-for="CpfCnpj" maxlength="25" class="form-control form-control-sm cpfCnpj" />
                    <span asp-validation-for="CpfCnpj" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    Tipo
                    <select asp-for="TipoPessoa" class="form-control form-control-sm">
                        <option value="Pessoa Fisica">Pessoa Física</option>
                        <option value="Pessoa Jurídica">Pessoa Jurídica</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-1">
                    <input type="submit" value="Gravar" class="btn btn-primary botao-primario">
                </div>
                <div class="form-group col-md-1">
                    <a asp-action="Index" class="btn btn-light">
                        Fechar
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>

<partial name="../Shared/_MascaraCpfCnpj" />