@using Projeto.Models
@model User

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}


<link rel="stylesheet" href="~/css/login.css" />

<body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper" style="padding-top: 2em;">
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Login</h4>

                            <form id="account" method="post" class="my-login-validation" novalidate="">

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <label for="email">Usu√°rio</label>
                                    <input asp-for="Username" class="form-control" required="" autofocus="" placeholder="admin">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="password">Senha<label>
                                            <input type="password" asp-for="Password" class="form-control" required=""
                                                data-eye="" style="padding-right: 60px;" placeholder="1234">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group m-0" style="padding-top: 3em;">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Login
                                    </button>
                                </div>
                                <div class="mt-4 text-center">
                                    Fazer novo registro? <a asp-action="Register">Register</a>
                                </div>
                                <div class="mt-4 text-center">
                                    <a asp-action="Index">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
