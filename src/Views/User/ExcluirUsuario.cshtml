@using Projeto.Models
@model User


@{
    Layout = "_LayoutAdmin";
}

<div class="card">
    <div class="card-body">

        <h5 class="card-title">Tem certeza que deseja Excluir?</h5>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
            <h6>@ViewBag.Message</h6>
        </div>

        <form asp-action="ExcluirUsuario" method="POST">

            <div class="row">
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">CÃ³digo</h6>
                            <h6> @Model.Id</h6>
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Nome</h6>
                            <h6>@Model.Username</h6>
                            <input type="hidden" asp-for="Username" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Perfil</h6>
                            <h6>@Model.Role</h6>
                            <input type="hidden" asp-for="Role" />
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </div>
                <div class="form-group col-md-2">
                    <a asp-action="ListaUsuarios" class="btn btn-light">
                        Fechar
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>
